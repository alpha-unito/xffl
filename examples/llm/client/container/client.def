Bootstrap: docker
From: {{ BASE_IMAGE }}

%arguments
	WORKDIR=$(pwd)
	XFFL_FOLDER=xffl

	# NVIDIA
	BASE_IMAGE=nvcr.io/nvidia/pytorch:25.10-py3
	# ROCM
	# BASE_IMAGE=rocm/pytorch:rocm7.0.2_ubuntu24.04_py3.12_pytorch_release_2.6.0
	VERSION=v0.1.0

%setup
    mkdir ${APPTAINER_ROOTFS}/{{ XFFL_FOLDER }}

%post
	# xFFL installation
	cd /{{ XFFL_FOLDER }}/ \
	&& git clone --depth 1 --branch main https://github.com/alpha-unito/xffl.git \
	&& cd xffl \
	&& python3 -m pip install --upgrade pip \
	&& python3 -m pip install --no-cache-dir --root-user-action=ignore .

	# Cleanup
	cd / \
	&& rm -rf /{{ XFFL_FOLDER }}

%labels
    Author gianluca.mittone@unito.it
    Version {{ VERSION }}

%help
   HPC-ready container for the xFFL experiments ({{ VERSION }})
   Base image: {{ BASE_IMAGE }}
